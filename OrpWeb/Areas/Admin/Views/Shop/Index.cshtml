@using Shared.Resources;
@using Shared.Model.DTO.Admin.Shop;
@model ShopDto
@{
    var pageSize = ViewBag.PageSize;
    var pageIndex = ViewBag.PageIndex;
}
@Html.HiddenFor(x => pageSize)
@Html.HiddenFor(x => pageIndex) 


<div class="content">
    <div class="row flex-fill g-4">
        <div class="col-md-12">
            <div class="white-box">
                <div class="white-box-header" style="margin-bottom:10px">
                    <h1>Shops</h1>
               
                </div>
                <div class="d-flex row mt-2 g-sm-2">
                    <div class="col-6 col-sm-auto mb-2 mt-0 d-flex gap-2">
                        <div class="Searchbar">
                            <input id="seachinput" type="text" class="form-control seachinput" placeholder="Search">
                          
                        </div>
                       
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table table-sm table-default align-middle nowrap mb-2" id="data-table_shop" style="width:100% !important">
                        <thead>
                            <tr>
                                @foreach (var p in new Shared.Model.DTO.Admin.Shop.ShopDto().GetType().GetProperties().Where(p => !new List<string>() { "TotalRecord", "AddedOnUTC" }.Contains(p.Name)))
                                {
                                    <th data-name="@p.Name">@(p.GetCustomAttribute<DisplayAttribute>()?.Name ?? p.Name)</th>
                                } 
                              
                            </tr>

                        </thead>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


@section scripts {

    <environment include="Development">
        <script src="~/sitejs/common/table.js" asp-append-version="true"></script>
        <script src="~/sitejs/shop.js" asp-append-version="true"></script>
       
    </environment>
    <environment exclude="Development">
        <script src="~/js/table.min.js" asp-append-version="true"></script>
        <script src="~/js/shop.min.js" asp-append-version="true"></script>
    </environment>
    <script>
        $(document).ready(function ()
        {
            $("#Shop").addClass('active');
        });
    </script>
}

