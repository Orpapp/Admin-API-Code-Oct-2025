@using Shared.Resources;
@using Shared.Model.DTO.Admin.Category;
@model CategoryDto
@{
    var pageSize = ViewBag.PageSize;
    var pageIndex = ViewBag.PageIndex;
}
@Html.HiddenFor(x => pageSize)
@Html.HiddenFor(x => pageIndex)
@Html.HiddenFor(x => ResourceString.ActivateCategory, new { @id = "activateMsg" })
@Html.HiddenFor(x => ResourceString.DeactivateCategory, new { @id = "deactivateMsg" })


<div class="content">
    <div class="row flex-fill g-4">
        <div class="col-md-12">
            <div class="white-box">
                <div class="white-box-header" style="margin-bottom:10px">
                    <h1>Categories</h1>
                    <a class="btn btn-primary mw105 my-1 me-3" href="@Url.Action("AddUpdate","Category",new { @Area ="Admin"})">Add Category</a>
                </div>
                <div class="d-flex row mt-2 g-sm-2">
                    <div class="col-6 col-sm-auto mb-2 mt-0 d-flex gap-2">
                        <div class="Searchbar">
                            <input id="seachinput" type="text" class="form-control seachinput" placeholder="Search">
                          
                        </div>
                       
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table table-sm table-default align-middle nowrap mb-2" id="data-table_categories" style="width:100% !important">
                        <thead>
                            <tr>
                                @foreach (var p in new Shared.Model.DTO.Admin.Category.CategoryDto().GetType().GetProperties().Where(p => !new List<string>() {  "TotalRecord" }.Contains(p.Name)))
                                {
                                    <th data-name="@p.Name">@(p.GetCustomAttribute<DisplayAttribute>()?.Name ?? p.Name)</th>
                                }

                                <th data-name="Action">Action</th>
                            </tr>

                        </thead>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


@section scripts {

    <environment include="Development">
        <script src="~/sitejs/common/table.js" asp-append-version="true"></script>
        <script src="~/sitejs/category.js" asp-append-version="true"></script>
       
    </environment>
    <environment exclude="Development">
        <script src="~/js/table.min.js" asp-append-version="true"></script>
        <script src="~/js/category.min.js" asp-append-version="true"></script>
    </environment>
    <script>
        $(document).ready(function ()
        {
            $("#Categories").addClass('active');
        });
    </script>
}

