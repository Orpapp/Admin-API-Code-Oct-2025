@using Shared.Common;
@using Shared.Model.Request.Admin.Category;
@model Category
<div class="content">
    <div class="row flex-fill g-4">
        <div class="col-md-12">
            <div class="white-box">
                <div class="white-box-header">
                    <h1>Category Details</h1>
                    <a class="btn btn-secondary mw105 my-1 me-3" href="@Url.Action("Index","Category",new { @Area ="Admin"})">Back To List</a>
                </div>
                <form class="w-100" id="frmUpdateCategory">
                    @Html.HiddenFor(x => x.Id)
                    @Html.HiddenFor(x=>x.IsActive)
                    <div class="row">

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="" class="form-label">Name</label><span class="text-danger">*</span>
                                @Html.TextBoxFor(x => x.Name, new { @tabindex = "1", @class = "form-control", @maxlength = "50", @placeholder = "Name" })
                                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger"})
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="" class="form-label">Color</label><span class="text-danger">*</span>
                            
                                @Html.TextBoxFor(x => x.Color, new { @tabindex = "2", @class = "form-control ",@type="color"  })
                                @Html.ValidationMessageFor(x => x.Color, "", new { @class = "text-danger" })
                            </div>
                        </div>
                   

                        <div class="col-md-12">
                            <div class="mb-3">
                                <div class="d-flex align-items-center justify-content-end flex-wrap">
                                    <button id="btnsubmit" class="btn btn-primary mw105 my-1" type="button" onclick="categories.AddUpdate(this);" style="margin-right: 18px;">
                                        @(Model.Id > 0 ? "Update" : "Add")
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<environment include="Development">
    <script src="~/sitejs/category.js" asp-append-version="true"></script>
</environment>
<environment exclude="Development">
        <script src="~/js/category.min.js"></script>
</environment>
<script>
    $(document).ready(function () {
            $("#Categories").addClass('active');
    });
</script>
}

