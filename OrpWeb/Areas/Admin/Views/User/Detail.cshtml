@using Shared.Common;
    @using Shared.Model.DTO.Account;
@model UserDetailsDto
<div class="content">
    <div class="row flex-fill g-4">
        <div class="col-md-12">
            <div class="white-box">
                <div class="white-box-header">
                    <h1>User Details</h1>
                    <a class="btn btn-secondary mw105 my-1 me-3" href="@Url.Action("Index","User",new { @Area ="Admin"})">Back To List</a>
                </div>
                <form class="w-100" id="frmUpdateUser">
                    @Html.HiddenFor(x => x.UserId)
                    <div class="row">

                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="" class="form-label">Name</label><span class="text-danger">*</span>
                                @Html.TextBoxFor(x => x.FirstName, new { @tabindex = "1", @class = "form-control text-capitalize", @maxlength = "100", @placeholder = "Name", @readonly = "true", })
                                @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger"})
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="" class="form-label">Email</label><span class="text-danger">*</span>
                                @Html.TextBoxFor(x => x.Email, new { @readonly = "true", @tabindex = "1", @class = "form-control", @placeholder = "Email" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="" class="form-label">Phone Number</label><span class="text-danger">*</span>
                                @Html.TextBoxFor(x => x.PhoneNumber, new { @tabindex = "1", @class = "form-control numbersOnly", @maxlength = "15", @placeholder = "Phone Number",@readonly = "true", })
                                @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @class = "text-danger"})
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <input type="hidden" asp-for="ProfileImage" id="ServiecImage" />
                                <label>Profile Image</label>
                                <div class="col-md-12">
                                    @if (Model.ProfileImage != null)
                                    {
                                        <img id="imgUser" onerror="if(this.src != '@SiteKeys.SiteUrl@SiteKeys.DefaultUserImage')this.src='@SiteKeys.SiteUrl@SiteKeys.DefaultUserImage';" src="@(Model.ProfileImageUrl)" alt="" style="height:70px;width:70px;" class="rounded-circle">
                                       
                                    }
                                    else
                                    {
         
                                            <img id="imgUser" type="hidden" src="@SiteKeys.SiteUrl@SiteKeys.DefaultUserImage" alt="" style="height:70px; width:70px;" class="rounded-circle">
                                    }
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<environment include="Development">
    <script src="~/sitejs/admin.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/js/admin.min.js"></script>
</environment>
<script>
    $(document).ready(function () {
        $("#User").addClass('active');
    });
</script>
}

